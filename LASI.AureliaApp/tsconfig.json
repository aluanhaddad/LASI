{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "es6",
    "module": "system",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "rootDirs": [
      "src",
      "shared"
    ],
    "typeRoots": [
      "types/",
      "jspm_packages/npm/",
      "jspm_packages/npm/@types/"
    ],
    "types": [
      "tape"
    ]
  },
  "exclude": [
    "jspm_packages/github",
    "jspm_packages/npm/typescript@next"
  ]
}