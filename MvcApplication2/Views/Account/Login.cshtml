@using LASI.Core;
@using LASI;
@using LASI.WebService.Controllers;
@using LASI.WebService;
@using Newtonsoft.Json;

@Styles.Render("~/Content/App/Account/Login.css")

@{
    ViewBag.Title = "Login";
}

@model LASI.WebService.Models.User.UserModel

@{
    Response.OutputCache(60);
}

<div class="container">
    <form class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input class="form-control" type="email" autofocus="" required="" placeholder="Email address" />
        <input class="form-control" type="password" required="" placeholder="Password" />
    </form>
    <label class="checkbox">
        <input type="checkbox" value="remember-me" />
        Remember me
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        Sign in
    </button>
</div>


