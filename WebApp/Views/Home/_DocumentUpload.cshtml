@using LASI.WebApp.Models;

@model FileUploadModel

<div>
    @using (Html.BeginForm(actionName: "Upload", controllerName: "Home", method: FormMethod.Post, htmlAttributes: new
    {
        enctype = "multipart/form-data",
        target = Model.UploadTarget,
        @class = "form-inline",
        id = "fileuploadform",
    })) {

        <div class="progress-bar-info">
            <p id="progress-text">
                @Model.Message
            </p>
        </div>

        <div class="progress">
            <div id="progress-bar" class="progress-bar text-aligned-progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="max-width: 100%; width:@Model.Percentage">
            </div>
        </div>
        <input type="file" name="fileuploadform" form="fileuploadform" class="input-sm" multiple />


        <input type="submit" name="Submit" value="Upload" class="btn btn-default" form="fileuploadform" />


        <iframe class="hidden" id="@Model.UploadTarget" name="@Model.UploadTarget" src=""></iframe>
    }

</div>