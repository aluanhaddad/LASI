@using LASI.WebApp;
@using LASI.WebApp.Models;
@using MvcFileUploader;
@using MvcFileUploader.HtmlHelper;
@using MvcFileUploader.Models;

@model FileUploadModel
<div class="progress-bar-info">
    <p id="progress-text">
        @Model.Message
    </p>
</div>
<div class="progress">
    <div id="progress1" class="progress-bar  text-aligned-progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="max-width: 100%; width:@Model.Percentage">
    </div>
</div>
<div>
    @using (Html.BeginForm(actionName: "Upload", controllerName: "Home", method: FormMethod.Post, htmlAttributes: new
    {
        enctype = "multipart/form-data",
        target = Model.UploadTarget,
        @class = "form-inline",
        id = "fileuploadform"
    })) {
        <input type="file" style="width:18px !important;height:18px !important;" name="fileupload" form="fileuploadform" accept="@Model.AcceptedExtensions" class="glyphicon glyphicon-file" />


        <input type="submit" name="submit" value="Upload" class="glyphicon glyphicon-file" />
    }
    <iframe class="hidden" id="@Model.UploadTarget" name="@Model.UploadTarget" src=""></iframe>
</div>