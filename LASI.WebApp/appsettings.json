{
    "AppSettings": {
        "SiteTitle": "LASI",
        "ProjectWebsite": "http://lasi-project.org",
        "AutoDebugCleanupOn": true,
        "vs": { "EnableBrowserLink": true },
        "debug": true
    },
    "Resources": {
        "ResourcesDirectory": "./../../LASI.App/Resources/",
        "ConvertersDirectory": "StandaloneFileConverters/",
        "MaximumEntropyModelDirectory": "TaggingPackage/OpenNLP/OpenNLP/Models/",
        "NameDataDirectory": "LASICustom/NameData/",
        "SubordinatingPrepositionalsInfoFile": "LASICustom/Binding/KnownSubordinators.txt",
        "WordnetFileDirectory": "WordNetThesaurusData/",
        "WordnetSearchDirectory": "TaggingPackage/OpenNLP/OpenNLP/Models/namefind/"
