    "MongoDB": {
        "CreateProcess": true,
        "ApplicationDatabaseName": "LASI",
        "DataDbPath": "/App_Data/Mongo/data/db",
        "InstanceUrl": "mongodb://localhost:27017",
        "MongodExePath": "C:/program Files/MongoDB/Server/3.0/bin/mongod.exe",
        "UserCollectionName": "users",
        "UserDocumentCollectionName": "documents",
        "OrganizationCollectionName": "organizations",
        "UserRoleCollectionName": "roles"
