<div ng-controller="UploadController as upload">
    <div class="button" ngf-select ng-model="upload.files" ngf-multiple="multiple">Select File</div>
    on file change:
    <div class="button" ngf-select ngf-change="upload.uploadFiles(upload.files)" ngf-multiple="multiple">Select File</div>
    Drop File:
    <div ngf-drop ngf-select ng-model="upload.files" class="drop-box"
         ngf-drag-over-class="dragover" ngf-multiple="true" ngf-allow-dir="true"
         accept="upload.fileInputAcceptText">
        Drop pdfs or images here or click to upload
    </div>
    <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>
    Files:
    <ul>
        <li ng-repeat="file in upload.files" style="font:smaller">{{file.name}}</li>
    </ul>
    Upload Log:
<pre>{{log}}</pre>
</div>