<div ng-controller="ListController as controller" ng-cloak>
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                <tabset class="tabs-left">
                    <tab>
                        <tab-heading>
                            <span class="glyphicon glyphicon-pencil"></span>
                        </tab-heading>
                        <div><textarea></textarea>
                            @{//var lines = new List<string>();
                                await Component.InvokeAsync("DynamicTextEditor");
                            }
                        </div>
                    </tab>
                    <tab ng-repeat="document in controller.documents track by document.id">
                        <tab-heading>
                            {{document.name}}
                            <div class="col-sm-4">
                                <progress-bar value="{{document.progress}}"></progress-bar>
                            </div>
                            <div class="progress">
                                    <div class="progress-bar progress-bar-striped active progress-bar-{{document.percentComplete}}"
                                         role="progressbar"
                                         aria-valuenow={{document.percentComplete}}
                                         aria-valuemin="0"
                                         aria-valuemax="100">{{document.percentComplete}}%</div>
                                </div>
                        </tab-heading>
                        <div class="panel-group" id="accordion">
                            <div class="lexical-content-block">{{document}}</div>
                        </div>
                    </tab>
                </tabset>
            </div>
        </div>

    </div>
</div>
