@inject Microsoft.Framework.OptionsModel.IOptions<LASI.WebApp.AppSettings> AppSettings
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - @AppSettings.Options.SiteTitle</title>
</head>
<body hidden>


    <section ui-view="app.navbar"></section>

    <div class="container body-content">
        @RenderBody()
        <section ui-view="app.home"></section>


        <footer>
            <p>&copy; 2015 - @AppSettings.Options.SiteTitle</p>
        </footer>
    </div>
    <script src="~/jspm_packages/system.js"></script>
    <script src="~/config.js"></script>
    <script>
        System.import('app')
            .then(function (app) {
                app.bootstrap();
                $(document.body).show();
            })
            .catch(console.error.bind(console));
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
