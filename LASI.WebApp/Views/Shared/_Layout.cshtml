@inject Microsoft.Extensions.OptionsModel.IOptions<LASI.WebApp.AppSettings> AppSettings
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@inject Microsoft.AspNet.Identity.SignInManager<LASI.WebApp.Models.ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - @AppSettings.Value.SiteTitle</title>
</head>
<body hidden>

    <div class="container body-content">
        @Html.AntiForgeryToken()


        @RenderBody()
        <ui-view></ui-view>

        <footer>
            <p>&copy; 2015 - @AppSettings.Value.SiteTitle</p>
        </footer>
    </div>
    <script src="~/jspm_packages/system.js"></script>
    <script src="~/config.js"></script>
    <!--Uncomment in production-->
    @*<script src="~/build.js"></script>*@
    <script>
        System.import('app').catch(console.error.bind(console));
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
