@using LASI.WebApp.Helpers
@using LASI.Utilities

@model LASI.WebApp.Models.DocumentStructures.DocumentModel

<div id="main-content">
    <div id=@(Model.Title.ToSafeHtmlDomId()) class="container">

        <div class="document">
            @{
                var indexedPages = Model.Pages.WithIndex();
                <nav>

                </nav>
                <div>
                    @foreach (var pageModel in indexedPages)
                    {
                        var index = pageModel.Index + 1;

                        <div id="page@(index)">

                            @foreach (var paragraphModel in pageModel.Element.Paragraphs)
                            {
                                @Html.Partial("_Paragraph", paragraphModel)
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>