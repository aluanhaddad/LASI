@model IEnumerable<AspSixApp.Models.User.ActiveUserDocument>

<div class="collapse navbar-collapse navbar-left" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="document-menu-dropdown-href"
               data-toggle="dropdown"
               role="button"
               aria-expanded="false"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;<b class="caret"></b></a>
            <ul class="dropdown-menu" role="menu">
                @foreach (var userDocument in Model)
                {
                    var id = userDocument._id;
                    var progress = userDocument.Progress;
                    <li class="dropdown document-list-item" id="document-list-item-@(id)">
                        <a href="#"><span class="glyphicon glyphicon-file pull-left"></span>@userDocument.Name</a>
                        <div class="progress hidden">
                            <span class="item-id-hidden">@(userDocument._id)</span>
                            <div id="progress-bar-@(id)"
                                 class="progress-bar text-aligned-progress-bar"
                                 style="max-width: 100%; width:@(progress)"
                                 role="progressbar"
                                 aria-valuenow="0"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                    </li>
                }
                <li class="dropdown">
                    <a href="#"><span class="glyphicon glyphicon-upload"></span></a>
                    @*@Html.Partial("_DocumentUpload", new AspSixApp.Models.DocumentUploadModel
                        {
                            UploadTarget = "fileuploadtarget"
                        })*@
                </li>
            </ul>



        </li>
        <li class="dropdown"><a href="#" id="new-text-editor-item" class="nav-justified glyphicon glyphicon-pencil"></a></li>

    </ul>
</div>

