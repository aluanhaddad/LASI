@model AspSixApp.Models.DocumentStructures.ParagraphModel

<p class="lexical-content-block @Model.Style.CssClass">
    @foreach (var sentenceModel in Model.SentenceModels)
    {
        <span>
            &nbsp;&nbsp;&nbsp;&nbsp;
            @foreach (var phraseModel in sentenceModel.PhraseModels)
            {
                @await Html.PartialAsync("_Phrase", phraseModel)
            }
        </span>
    }
</p>
